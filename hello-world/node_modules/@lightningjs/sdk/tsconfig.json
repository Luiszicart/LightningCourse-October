{
  "include": [
    "**/*.d.ts", "**/*.ts"
  ],
  "compilerOptions": {
    "lib": ["ES2018", "DOM"],
    "outDir": "types",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  }
}
